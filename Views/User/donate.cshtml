                        </option>
                        <option value="B+">
                            B+
                        </option>
                        <option value="B-">
                            B-
                        </option>
                        <option value="AB+">
                            AB+
                        </option>
                        <option value="AB-">
                            AB-
                        </option>


                        <option value="O+">
                            O+
                        </option>
                        <option value="O-">
                            O-
                        </option>
                    </select>
                </td>
            </tr>
           
            <tr><td>City </td><td><input type="text" id="domicile" name="city" required/></td></tr>
            
            <tr><td>Cell No </td><td><input type="text" id="cell" name="cellno" required/></td></tr>
            <tr><td>Address </td><td><input type="text" id="address" name="address" required/></td></tr>

            <tr><td> Last Donation Date</td><td><input type="date" name="date" name="lddate" /></td></tr>

            <tr>
               
                <td></td>  <td align="left">
                 <input type="submit" name="submit" action="/User/Add" />
                    <input type="reset" name="reset" />
                </td>
            </tr>
        </form>
        <form action="/User/pic" method="post" enctype="multipart/form-data">

